{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "POKEDEX API",
    "description": ""
  },
  "host": "pokedex-api-4hn5.onrender.com",
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/pokemons": {
      "get": {
        "description": "Rota referente a listagem de todos os Pokémons",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/pokemons/{name}": {
      "get": {
        "description": "Rota referente a busca e listagem de todos os Pokémons, pelo nome completo ou por cada caractere do nome",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/createNewPokemon/": {
      "post": {
        "description": "Cria um novo Pokémon todos os dados são requeridos",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/deletePokemon/{id}": {
      "delete": {
        "description": "Deleta um Pokémon que contém o ID passado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/updatePokemon/": {
      "put": {
        "description": "Atualiza os dados de cada Pokémon",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "example": "00"
                },
                "image": {
                  "example": "image.png"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
